generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}

// 用户表
model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique @map("username")
  password  String   @map("password")
  email     String   @unique @map("email")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  // 多对多关系
  userPermissions UserPermission[]
  // 与Prompts的关系
  prompts         Prompts[]

  @@map("users")
}

// 权限表
model Permission {
  id          Int      @id @default(autoincrement())
  name        String   @unique @map("name")
  description String   @map("description")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  // 多对多关系
  userPermissions UserPermission[]

  @@map("permissions")
}

// 用户权限关联表
model UserPermission {
  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     Int        @map("user_id")
  permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)
  permissionId Int      @map("permission_id")
  assignedAt DateTime   @default(now()) @map("assigned_at")

  @@id([userId, permissionId])
  @@map("user_permissions")
}

// Prompt表
model Prompts {
  id           Int       @id @default(autoincrement()) @map("id")
  title        String    @db.VarChar(255) @map("title")
  description  String?   @db.Text @map("description")
  content      String    @db.Text @map("content")
  tags         String?   @db.VarChar(255) @map("tags")
  version      Int       @default(1) @map("version")
  status       String    @db.VarChar(50) @default("active") @map("status")
  author_id    Int?      @map("author_id")
  category     String?   @db.VarChar(100) @map("category")
  usage_count  Int       @default(0) @map("usage_count")
  last_used_at DateTime? @db.Timestamp @map("last_used_at")
  is_public    Boolean   @default(true) @map("is_public")
  source       String?   @db.VarChar(255) @map("source")
  remarks      String?   @db.Text @map("remarks")
  role         String    @db.VarChar(50) @default("user") @map("role")
  created_at   DateTime  @default(now()) @db.Timestamp @map("created_at")
  updated_at   DateTime  @default(now()) @updatedAt @db.Timestamp @map("updated_at")

  // 与User的关系
  author       User?     @relation(fields: [author_id], references: [id])

  @@map("prompts")
}
