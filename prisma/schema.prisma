generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}

// 用户表
model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique @map("username")
  password  String   @map("password")
  email     String   @unique @map("email")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  // 多对多关系
  userPermissions UserPermission[]
  // 与Prompts的关系
  prompts         Prompts[]

  @@map("users")
}

// 权限表
model Permission {
  id          Int      @id @default(autoincrement())
  name        String   @unique @map("name")
  description String   @map("description")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  // 多对多关系
  userPermissions UserPermission[]

  @@map("permissions")
}

// 用户权限关联表
model UserPermission {
  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     Int        @map("user_id")
  permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)
  permissionId Int      @map("permission_id")
  assignedAt DateTime   @default(now()) @map("assigned_at")

  @@id([userId, permissionId])
  @@map("user_permissions")
}

// Prompt表
model Prompts {
  id           Int       @id @default(autoincrement()) @map("id")
  title        String    @db.VarChar(255) @map("title")   // 标题，最大255字符
  description  String?   @db.Text @map("description")   // 描述，可选，文本类型
  content      String    @db.Text @map("content")   // 内容，文本类型
  tags         String?   @db.VarChar(255) @map("tags") // 标签，可选，最大255字符，用逗号分隔
  version      Int       @default(1) @map("version") // 版本号，默认1
  status       String    @db.VarChar(50) @default("active") @map("status") // 状态，可选值：active/draft/inactive，默认active
  author_id    Int?      @map("author_id") // 作者ID，外键，可选，外键引用User表的id字段
  category     String?   @db.VarChar(100) @map("category") // 分类，可选，最大100字符
  usage_count  Int       @default(0) @map("usage_count")   // 使用次数，默认0
  last_used_at DateTime? @db.Timestamp @map("last_used_at") // 最后使用时间，可选，时间戳类型
  is_public    Boolean   @default(true) @map("is_public") // 是否公开，默认true
  source       String?   @db.VarChar(255) @map("source") // 来源，可选，最大255字符
  remarks      String?   @db.Text @map("remarks") // 备注，可选，文本类型
  role         String    @db.VarChar(50) @default("user") @map("role")   // 角色，可选值：user/assistant/system，默认user
  updated_at   DateTime  @default(now()) @updatedAt @db.Timestamp @map("updated_at") // 更新时间，默认当前时间，自动更新，时间戳类型

  // 与User的关系
  author       User?     @relation(fields: [author_id], references: [id])

  @@map("prompts")
}
